<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/main_background">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".03"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/sebha_header"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/head_sebha_logo"
        app:layout_constraintStart_toStartOf="@id/main_sepha_logo"
        app:layout_constraintEnd_toEndOf="@id/main_sepha_logo"
        app:layout_constraintTop_toBottomOf="@id/gone"
        />

    <ImageView
        android:id="@+id/main_sepha_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/body_sebha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebha_header"
        android:layout_marginTop="-30dp"
        />
    <TextView
        android:id="@+id/num_of_tasbehat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/number_of_dhkier"
        app:layout_constraintTop_toBottomOf="@id/main_sepha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/num_of_tasbehat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:text="0"
        android:background="@drawable/bg_counter"
        android:padding="20dp"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dithkr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:text="@string/allha"
        android:background="@drawable/bg_dithkr"
        android:padding="15dp"
        android:textSize="22sp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>